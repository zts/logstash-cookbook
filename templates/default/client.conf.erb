# Basic logstash server config
input {
<% @inputs.each do |i| -%>
  <%= i[:kind] %> {
    <% i[:params].each do |k,v| -%>
    <% if v.is_a?String -%>
      <%= k %> => "<%= v %>"
    <% else -%>
      <%= k %> => <%= v %>
    <% end -%>
    <% end -%>
  }
<% end -%>
}

